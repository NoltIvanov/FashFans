<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FashFans.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimageloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    xmlns:local="clr-namespace:FashFans">

    <StackLayout>
        <!--  Place new controls here  -->
        <Label
            FontFamily="{StaticResource SFProLight}"
            HorizontalOptions="Center"
            Text="Welcome to Xamarin.Forms!"
            VerticalOptions="CenterAndExpand" />
        <Label
            FontFamily="{StaticResource SFProRegular}"
            HorizontalOptions="Center"
            Text="Welcome to Xamarin.Forms!"
            VerticalOptions="CenterAndExpand" />
        <ffimageloadingsvg:SvgCachedImage
            Margin="0,0,0,0"
            Aspect="AspectFit"
            HeightRequest="50"
            Source="resource://FashFans.Resources.Images.ic_password.svg"
            WidthRequest="50" />
        <Label
            FontFamily="{StaticResource SFProThin}"
            HorizontalOptions="Center"
            Text="Welcome to Xamarin.Forms!"
            VerticalOptions="CenterAndExpand" />
        <Label
            HorizontalOptions="Center"
            Text="Welcome to Xamarin.Forms!"
            VerticalOptions="CenterAndExpand" />

    </StackLayout>

</ContentPage>
